  dans la classe navire ( cpp):
  //test de deplacement du navire


bool Navire::peut_dep_navire(Navire* tabNavires){
    size_t x=this->X_max_case_navire();
    size_t y=this->Y_min_case_navire()-1;
    bool teste=true;
      for(size_t i=0;i<5;i++){
    if (tabNavires[i].getNbCases() > 0){
      if (tabNavires[i].estDansNavire(x, y) == true)
      teste=false;
    }
  }
return teste;

}

dans la class grille dans le cpp
// donne le tabNavire
Navire* Grille::getTabNavire(){
return tabNavires;
}
